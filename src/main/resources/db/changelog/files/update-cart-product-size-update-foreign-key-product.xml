http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="update-foreign-key-fk_product_size_id" author="hungpn">
        <preConditions onFail="MARK_RAN">
            <foreignKeyConstraintExists foreignKeyName="fk_cart_product_size_product_id" foreignKeyTableName="cart_product_size"/>
        </preConditions>
        <dropForeignKeyConstraint baseTableName="cart_product_size" constraintName="fk_cart_product_size_product_id" />
