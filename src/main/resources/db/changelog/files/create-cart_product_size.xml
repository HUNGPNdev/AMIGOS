<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="create-new-table-cart_product_size" author="hungpn">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart_product_size"/>
            </not>
        </preConditions>
        <createTable tableName="cart_product_size">
            <column name="id" type="BINARY(16)">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="cart_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="INT" defaultValue="0"/>
            <column name="status" type="ENUM('WAITING_FOR_CONFIRMATION', 'DELIVERING', 'DELIVERED', 'CANCELLED')" defaultValue="WAITING_FOR_CONFIRMATION">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="bit(1)" defaultValue="false"/>
            <column name="create_at" type="DATETIME" defaultValue="now()"/>
        </createTable>
    </changeSet>
    <changeSet id="add-foreignkey-to-cart_product_size" author="hungpn">
        <addForeignKeyConstraint baseTableName="cart_product_size" baseColumnNames="product_id" constraintName="fk_cart_product_size_product_id" referencedTableName="product" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="cart_product_size" baseColumnNames="user_id" constraintName="fk_cart_product_size_user_id" referencedTableName="user" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="cart_product_size" baseColumnNames="cart_id" constraintName="fk_cart_product_size_cart_id" referencedTableName="cart" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>