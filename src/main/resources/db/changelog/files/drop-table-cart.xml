<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="drop-table-cart" author="hungpn">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="cart"/>
        </preConditions>
        <dropForeignKeyConstraint baseTableName="cart" constraintName="fk_cart_user" />
        <dropForeignKeyConstraint baseTableName="cart_product_size" constraintName="fk_cart_product_size_cart_id" />
        <dropTable tableName="cart"/>
        <addColumn tableName="cart_product_size">
            <column name="user_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="TEXT" defaultValue="Null"/>
            <column name="price" type="DOUBLE" defaultValue="0.0"/>
        </addColumn>
        <dropColumn columnName="cart_id" columnDataType="BINARY(16)"
                    tableName="cart_product_size"/>
        <addForeignKeyConstraint baseTableName="cart_product_size" baseColumnNames="user_id" constraintName="fk_cart_product_size_user_id_2" referencedTableName="user" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>